<mvc:View controllerName="sap.ui.demo.zqf.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<Button id="helloDialogButton" icon="sap-icon://world" text="{i18n>openDialogButtonText}" press=".onOpenDialog" class="sapUiSmallMarginEnd"/>
			<Button text="{i18n>showHelloButtonText}" icon="sap-icon://account" press=".onShowHello" class="myAppDemoWT myCustomButton"/>
			<Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
			<Input value="{/recipient/value}" valueLiveUpdate="true" width="40%"/>
			<FormattedText htmlText="Hello {/recipient/name} {/recipient/value}" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
		</content>
	</Panel>
</mvc:View>